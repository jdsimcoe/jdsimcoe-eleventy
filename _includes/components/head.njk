<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>
    {% if title == 'Home' %}
      {{ metadata.title }}â€”{{ metadata.subtitle }}
    {% else %}
      {{ title }} | {{ metadata.title }}
    {% endif %}
  </title>
  <meta name="title" content="{{ metadata.title }}">
  <meta name="description" content="{{ metadata.subtitle }}">
  <meta property="og:type" content="website" />
  <meta property="og:url" content="{{ metadata.url }}">
  <meta property="og:title" content="{{ metadata.title }}" />
  <meta property="og:site_name" content="{{ metadata.title }}" />
  <meta property="og:description" content="{{ metadata.subtitle }}" />
  <meta property="og:image" content="{{ metadata.image }}" />
  <meta property="og:image:type" content="image/jpeg" />
  <meta property="og:image:width" content="1280" />
  <meta property="og:image:height" content="1280" />
  <meta property="twitter:card" content="summary_large_image">
  <meta property="twitter:url" content="{{ metadata.url }}">
  <meta property="twitter:title" content="{{ metadata.title }}">
  <meta property="twitter:description" content="{{ metadata.subtitle }}">
  <meta property="twitter:image" content="{{ metadata.image }}">
  <link rel="apple-touch-icon" href="apple-touch-icon.png" sizes="180x180">
  <link rel="mask-icon" href="/static/img/website_icon.svg" color="#94938D">
  <link rel="alternate" type="application/rss+xml" title="Jonathan Simcoe" href="/feed.xml" />
  <meta name="google-site-verification" content="krlqY81D67uqXoeecXe6mAjs0qOGKuxS6u6fGPsBqOs" />
  <script async src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>
  {% set css %}
    {% include "assets/css/inline.css" %}
  {% endset %}
  <style>{{ css | cssmin | safe }}</style>
  {% set js %}
    {% include "assets/js/inline.js" %}
  {% endset %}
  <script>{{ js | jsmin | safe }}</script>
</head>
